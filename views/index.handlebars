<div id="overlay">
    <h1 class="jumbotron text-center">Eat Da Burger!</h1>
    <section class="container">
        <div class="row">
            <div class="row col mx-auto">
                <section class="card mx-auto">
                    <h4 class="card-header text-center">Burgers not eaten:</h4>
                    <ul class="mx-auto px-0">
                        {{#each burgers}}
                            {{#unless devoured}}
                                <div class="rounded hover-craft px-1">
                                    {{burger_name}}
                                    <button class="eat-change btn" data-id="{{id}}" data-eaten="1">Devour!</button>
                                    </div>
                            {{/unless}}
                        {{/each}}
                    </ul>
                </section>
            </div>
            <div class="row col mx-auto">
                <section class="card mx-auto">
                    <h4 class="card-header text-center">Burgers eaten:</h4>
                    <ul class="mx-auto px-0">
                        {{#each burgers}}
                            {{#if devoured}}
                                <div class="rounded hover-craft px-1">
                                    {{burger_name}}
                                    <button class="eat-change ewww btn" data-id="{{id}}" data-eaten="0">That was gross!!!</button>
                                    </div>
                            {{/if}}
                        {{/each}}
                    </ul>
                </section>
            </div>
            <div class="col-12 mx-auto mt-5 text-center"><input id="new-burger" placeholder="New burger name!"></input></div>
            <div class="col-12 mt-1 text-center"><button id="add-burger" class="btn">Add a Burger!</button></div>
        </div>
    </section>
</div>